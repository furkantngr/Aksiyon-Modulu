@using HierarchicalTaskApp.Models
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="card-title">Simüle Giriş</h3>
            </div>
            <div class="card-body">
                <p>Lütfen görünümü simüle etmek için bir kullanıcı seçin:</p>
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="selectedUserId" class="form-label">Kullanıcı Seç:</label>
                        
                        <select name="selectedUserId" class="form-select" asp-items="ViewBag.Users">
                            <option value="">-- Kullanıcı Seçin --</option>
                        </select>
                        
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</div>