@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject HierarchicalTaskApp.Services.ITaskRepository TaskRepository

@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    string currentUserName = "Giriş Yapılmadı";
    if (userId.HasValue && userId.Value != 0)
    {
        var user = await TaskRepository.GetUserByIdAsync(userId.Value);
        currentUserName = user?.FullName ?? "Hata"; // DEĞİŞTİ: .Name -> .FullName
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Görev Yöneticisi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #f8f9fa; }
        .table thead th { background-color: #e9ecef; }
        /* Hatalı görev satırı için stil */
        .table-danger, .table-danger > th, .table-danger > td {
            --bs-table-accent-bg: var(--bs-danger-bg-subtle);
            color: var(--bs-danger-text-emphasis);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Task" asp-action="Index">Görev Yöneticisi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (userId.HasValue && userId.Value != 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Task" asp-action="Index">Görevlerim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Task" asp-action="Create">Yeni Görev</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                         @if (userId.HasValue && userId.Value != 0)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    Hoşgeldiniz, <strong>@currentUserName</strong>
                                </span>
                            </li>
                             <li class="nav-item">
                                 <a class="btn btn-outline-danger btn-sm" asp-controller="Auth" asp-action="Logout">Çıkış Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Görev Yöneticisi
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>